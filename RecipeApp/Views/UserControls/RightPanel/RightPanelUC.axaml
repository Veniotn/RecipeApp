<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DesktopApplications.ViewModels"
             xmlns:savedRecipes="clr-namespace:DesktopApplications.Views.UserControls.RightPanel.SavedRecipes"
             xmlns:rightPanel="clr-namespace:DesktopApplications.UserControls.RightPanel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopApplications.Views.UserControls.RightPanelUC"
             x:DataType="vm:RightPanelViewModel">
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
        <Border Grid.Row="0" Grid.Column="0" Name="RightPanel">
            <Grid>
                <savedRecipes:SavedRecipePanelUC DataContext="{Binding SavedRecipesViewModel}" IsVisible="{Binding IsVisible}"/>
                <rightPanel:SuggestedRecipesUC DataContext="{Binding SuggestedRecipesViewModel}" IsVisible="{Binding IsVisible}"/>
                <rightPanel:FriendsRecipesUC DataContext="{Binding FriendsRecipesViewModel}" IsVisible="{Binding IsVisible}"/>
                <rightPanel:GroceryListUC DataContext="{Binding GroceryListViewModel}" IsVisible="{Binding IsVisible}"/>
                <rightPanel:AddRecipeUC DataContext="{Binding AddRecipeViewModel}" IsVisible="{Binding IsVisible}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
