<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="clr-namespace:DesktopApplications.UserControls.RightPanel.SavedRecipes"
             xmlns:vm="clr-namespace:DesktopApplications.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopApplications.UserControls.SavedRecipePanelUC"
             x:DataType="vm:SavedRecipesViewModel">
    
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
        <Border Grid.Row="0" Grid.Column="0" Name="RecipesBorder">
            <ScrollViewer>
                <uc:RecipePreviewUC DataContext="{Binding Vm}"/>
            </ScrollViewer>
        </Border>
    </Grid>
    
   
</UserControl>
