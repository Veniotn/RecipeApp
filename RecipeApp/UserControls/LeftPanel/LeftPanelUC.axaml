<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:DesktopApplications.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopApplications.UserControls.LeftPanelUC"
             x:DataType="vm:LeftPanelViewModel">
    
    
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Name="ProfilePic"/>
                <Button Name="UserName" Content="{Binding UserName}"/>
            </StackPanel>
            
            <Button Classes="ActionBtn" Name="SavedRecipesBtn" Content="{Binding SavedRecipeBtnTxt}"
            Command="{Binding ActionBtnClick}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            
            <Button Classes="ActionBtn" Name="SuggestedRecipesBtn" Content="{Binding SuggestedRecipeBtnTxt}"
            Command="{Binding ActionBtnClick}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            
            <Button Classes="ActionBtn" Name="FriendsRecipesBtn" Content="{Binding FriendsRecipeBtnTxt}"
            Command="{Binding ActionBtnClick}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            
            <Button Classes="ActionBtn" Name="GroceryListBtn" Content="{Binding GroceryListBtnTxt}"
            Command="{Binding ActionBtnClick}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
            
            <Button Classes="ActionBtn" Name="AddRecipeBtn" Content="{Binding AddRecipeBtnTxt}"
            Command="{Binding ActionBtnClick}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"/>
        </StackPanel>
</UserControl>
